<?xml version="1.0" encoding="UTF-8"?>
<persistence version="3.0" xmlns="https://jakarta.ee/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd">
  <!-- Define Persistence Unit -->
  <persistence-unit name="pharmacyPU" transaction-type="JTA">
    <!--<jta-data-source>jdbc/pharmacy</jta-data-source>-->
    <jta-data-source>jdbc/pharmacy</jta-data-source>
    <class>entity.Addresses</class>
    <class>entity.Cart</class>
    <class>entity.CartItems</class>
    <class>entity.Categories</class>
    <class>entity.Complaints</class>
    <class>entity.Delivery</class>
    <class>entity.DeliveryPartners</class>
    <class>entity.DeliveryTracking</class>
    <class>entity.Discounts</class>
    <class>entity.Invoices</class>
    <class>entity.Manufacturers</class>
    <class>entity.Medicines</class>
    <class>entity.OrderItems</class>
    <class>entity.Orders</class>
    <class>entity.Offers</class>
    <class>entity.Payments</class>
    <class>entity.Pharmacists</class>
    <class>entity.Prescriptions</class>
    <class>entity.Reviews</class>
    <class>entity.Roles</class>
    <class>entity.Users</class>
    <exclude-unlisted-classes>false</exclude-unlisted-classes>
    <shared-cache-mode>ALL</shared-cache-mode>
    <properties>
    </properties>
  </persistence-unit>
</persistence>
